div.modal-dialog
	div.modal-content
	div.modal-header
		h3 Login
		button.close( type="button" ng-click="cancel()") &times
	div.modal-body
		.mid-login
			.form-group
				.row
					label.col-md-2.control-label.label-login Username
					.col-md-10
						input.form-control.login-input(type="text" required="required" placeholder="User Name" ng-model="user.username")
			.form-group
				.row
					label.col-md-2.control-label.label-login Password
					.col-md-10
						input.form-control.login-input(type="password" required="required" placeholder="Password" ng-model="user.password")
				.row(ng-show="invalid")
					.col-md-12
						p.invalid-pass username or password invalid
				button.btn.btn-primary(ng-click="login(user)") Login
	div.modal-footer
		button.btn.btn-default( type="button" ng-click="cancel()") Close