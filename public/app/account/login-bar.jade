.navbar-right(ng-controller="LoginController")
    ul.nav.navbar-nav.navbar-right(ng-hide="identity.isAuthenticated()")
        li
            a.btn.btn-primary.white-text(ng-click="open()" style="margin-right:2px" ng-show="!identity.isAuthenticated()") Влез
        li
            a.btn.btn-primary.white-text(href="#/signup" ng-show="!identity.isAuthenticated()") Присъедини се
    ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
        li.dropdown
            a.dropdown-toggle(href="" data-toggle="dropdown")
                | {{ identity.currentUser.firstName + ' ' + identity.currentUser.lastName }}
                span.caret
                ul.dropdown-menu
                    li(ng-show="identity.currentUser.isAdmin()")
                        a(href="#/admin/users") Users
                    li(ng-show="identity.isAuthenticated()")
                        a(href="#/profile") Profil
                    li
                        a(href="/" ng-click="logout()") Sign Out